@inherits LayoutComponentBase


<!-- Top Navigation Bar -->
<div class=" p-4 bg-gradient-to-r from-blue-700 to-blue-900 flex justify-end gap-3 flex-wrap">
    <a href="https://github.com/saifsaidi/BlazorImage/issues"
       target="_blank" rel="noopener noreferrer"
       aria-label="Submit feedback on GitHub"
       class="inline-flex items-center gap-2 bg-white hover:bg-blue-50 text-blue-700 px-5 py-2 rounded-full font-medium ">
        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="w-4 h-4">
            <path d="M21 11.5a8.38 8.38 0 0 1-.9 3.8 8.5 8.5 0 0 1-7.6 4.7 8.38 8.38 0 0 1-3.8-.9L3 21l1.9-5.7a8.38 8.38 0 0 1-.9-3.8 8.5 8.5 0 0 1 4.7-7.6 8.38 8.38 0 0 1 3.8-.9h.5a8.48 8.48 0 0 1 8 8v.5z"></path>
        </svg>
        <span class="hidden sm:inline">Give Feedback</span>
    </a>
    <a href="https://github.com/saifsaidi/BlazorImage/stargazers"
       target="_blank" rel="noopener noreferrer"
       aria-label="Star us on GitHub"
       class="animate-bounce  inline-flex items-center gap-2 bg-white hover:bg-blue-50 text-yellow-600 px-5 py-2 rounded-full font-medium ">
        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="w-4 h-4">
            <polygon points="12 2 15.09 8.26 22 9.27 17 14.14 18.18 21.02 12 17.77 5.82 21.02 7 14.14 2 9.27 8.91 8.26 12 2"></polygon>
        </svg>
        <span class="hidden  sm:inline">Star Us</span>
    </a>
</div>

<!-- Hero Header -->
<header class="border-b py-16 md:py-24 bg-gradient-to-b from-white to-gray-50">
    <div class="container mx-auto px-4 text-center">
        <div class="flex mx-auto justify-center items-center gap-4 mb-6">
            <div class="relative group">
                <div class="absolute -inset-0.5 bg-blue-600 rounded-full opacity-75 blur-sm group-hover:opacity-100 "></div>
                <img src="/icon.png"
                     width="80" height="80"
                     class="relative hover:scale-110 rounded-full bg-white p-2"
                     alt="BlazorImage Logo" />
            </div>
            <h1 class="text-4xl md:text-6xl font-bold bg-gradient-to-r from-blue-700 to-blue-900 py-6   bg-clip-text text-transparent">
                Blazor Image
            </h1>
        </div>
        <p class="text-xl md:text-2xl mb-10 max-w-2xl mx-auto text-gray-700">
            Image optimization for Blazor Static and Interactive Server-Side Applications.
        </p>
        <div class="flex flex-col sm:flex-row justify-center items-center gap-4 flex-wrap">
            <a href="https://github.com/saifsaidi/BlazorImage"
               target="_blank" rel="noopener noreferrer"
               class="inline-flex items-center gap-2 bg-blue-700 text-white px-6 py-3 rounded-full font-medium hover:bg-blue-800 shadow-lg hover:shadow-xl transition-colors">
                <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="w-5 h-5">
                    <path d="M15 22v-4a4.8 4.8 0 0 0-1-3.5c3 0 6-2 6-5.5.08-1.25-.27-2.48-1-3.5.28-1.15.28-2.35 0-3.5 0 0-1 0-3 1.5-2.64-.5-5.36-.5-8 0C6 2 5 2 5 2c-.3 1.15-.3 2.35 0 3.5A5.403 5.403 0 0 0 4 9c0 3.5 3 5.5 6 5.5-.39.49-.68 1.05-.85 1.65-.17.6-.22 1.23-.15 1.85v4"></path>
                    <path d="M9 18c-4.51 2-5-2-7-2"></path>
                </svg>
                Explore on GitHub
            </a>
            <div class="flex justify-center items-center gap-3 flex-wrap">
                <a href="https://www.nuget.org/packages/BlazorImage/"
                   target="_blank" rel="noopener noreferrer"
                   class="hover:opacity-80 transition-opacity duration-200">
                    <img src="https://img.shields.io/nuget/v/BlazorImage.svg?style=flat-square"
                         alt="NuGet version (BlazorImage)"
                         class="h-8 shadow-sm" />
                </a>
                <a href="https://www.nuget.org/packages/BlazorImage/"
                   target="_blank" rel="noopener noreferrer"
                   class="hover:opacity-80 transition-opacity duration-200">
                    <img src="https://img.shields.io/nuget/dt/BlazorImage.svg?style=flat-square"
                         alt="NuGet downloads (BlazorImage)"
                         class="h-8 shadow-sm" />
                </a>
            </div>
        </div>
    </div>
</header>

<!-- Main Content -->
<div class="flex-grow  mx-auto px-4 py-8 ">
    <div class="container mx-w-24 mx-auto px-4 ">
        @Body
    </div>
</div>

<!-- Footer -->
<footer class="bg-gray-100 py-8 border-t border-gray-200">
    <div class="container mx-auto px-4 text-center">
        <div class="flex justify-center items-center gap-4 mb-4">
            <a href="https://github.com/saifsaidi/BlazorImage"
               target="_blank" rel="noopener noreferrer"
               aria-label="GitHub"
               class="text-gray-600 hover:text-blue-700 ">
                <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="w-5 h-5">
                    <path d="M15 22v-4a4.8 4.8 0 0 0-1-3.5c3 0 6-2 6-5.5.08-1.25-.27-2.48-1-3.5.28-1.15.28-2.35 0-3.5 0 0-1 0-3 1.5-2.64-.5-5.36-.5-8 0C6 2 5 2 5 2c-.3 1.15-.3 2.35 0 3.5A5.403 5.403 0 0 0 4 9c0 3.5 3 5.5 6 5.5-.39.49-.68 1.05-.85 1.65-.17.6-.22 1.23-.15 1.85v4"></path>
                    <path d="M9 18c-4.51 2-5-2-7-2"></path>
                </svg>
            </a>
        </div>
        <p class="text-gray-600">© @DateTime.Now.Year BlazorImage. All rights reserved.</p>
    </div>
</footer>

<div id="blazor-error-ui" class="fixed bottom-0 w-full bg-red-600 text-white p-3 hidden" data-nosnippet>
    <div class="container mx-auto flex justify-between items-center">
        <p>An unhandled error has occurred.</p>
        <div class="flex items-center gap-4">
            <a href="." class="underline hover:no-underline">
                Reload
            </a>
            <button class="font-bold" onclick="this.parentNode.parentNode.parentNode.classList.add('hidden')">
                ×
            </button>
        </div>
    </div>
</div>

@page "/"
<PageTitle>BlazorImage Home</PageTitle>

<main class="container mx-auto max-w-7xl py-16 px-6 sm:px-8 lg:px-12 flex-grow">

    <section class="max-w-6xl mx-auto">
        <h2 class="text-2xl font-semibold text-gray-800 mb-6 text-center">Explore the Features</h2>
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
            @foreach (var example in GetExamples())
            {
                <a href="@example.Src" class="group block rounded-lg overflow-hidden bg-white shadow-md hover:shadow-lg transition-shadow duration-300">
                    <div class="p-6 flex flex-col h-full">
                        <div class="flex items-center gap-4 mb-4">

                            <h3 class="font-semibold text-xl text-gray-800 group-hover:text-blue-600 transition-colors duration-300">@example.Name</h3>
                        </div>
                        <p class="text-gray-700 flex-grow mb-4 leading-relaxed">@example.Description</p>
                        <div class="mt-auto pt-4 border-t border-gray-200 flex justify-between items-center">
                            <code class="text-xs bg-gray-100 px-3 py-1.5 rounded font-mono text-gray-700">@example.Src</code>
                            <span class="text-blue-600 group-hover:translate-x-2 transition-transform duration-300 flex items-center">
                                Learn More
                                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="ml-2">
                                    <path d="M5 12h14"></path>
                                    <path d="m12 5 7 7-7 7"></path>
                                </svg>
                            </span>
                        </div>
                    </div>
                </a>
            }
        </div>
    </section>

    <section class="max-w-5xl mx-auto mt-16 rounded-lg bg-blue-50 border border-blue-100 p-8">
        <div class="text-center">
            <h2 class="text-2xl font-semibold text-blue-800 mb-4 flex items-center justify-center gap-2">
                <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                    <circle cx="12" cy="12" r="10"></circle>
                    <path d="M12 16v-4"></path>
                    <path d="M12 8h.01"></path>
                </svg>
                Ready to Optimize Your Images?
            </h2>
            <p class="text-blue-700 mb-6 leading-relaxed">
                Get started with BlazorImage and experience a significant boost in your application's image loading performance. Dive into the documentation and explore the NuGet package.
            </p>
            <div class="flex justify-center gap-4">
                <a href="https://github.com/saifsaidi/BlazorImage#readme"
                   target="_blank"
                   class="inline-flex items-center gap-2 bg-blue-600 hover:bg-blue-700 text-white px-5 py-3 rounded-md font-medium transition-colors shadow-md">
                    <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                        <path d="M3 9h18v10a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V9Z"></path>
                        <path d="m3 9 2.45-4.9A2 2 0 0 1 7.24 3h9.52a2 2 0 0 1 1.8 1.1L21 9"></path>
                        <path d="M12 3v6"></path>
                    </svg>
                    Explore Documentation
                </a>
                <a href="https://www.nuget.org/packages/BlazorImage/"
                   target="_blank"
                   class="inline-flex items-center gap-2 bg-white border border-blue-600 text-blue-600 hover:bg-blue-50 px-5 py-3 rounded-md font-medium transition-colors shadow-sm">
                    <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                        <path d="m8 3 4 8 5-5 5 15H2L8 3z"></path>
                    </svg>
                    Get NuGet Package
                </a>
            </div>
        </div>
    </section>
</main>

@code {
    private record Examples(string Name, string Description, string Src);

    private List<Examples> GetExamples() => new()
    {
        new("Dashboard", "Manage and view cached optimized images for your application.", "/blazor/images"),
        new ("Basic", "Implement default image loading with specified dimensions.", "/basic"),
        new ("Priority Loading", "Ensure critical above-the-fold images load with high priority.", "/priority"),
        new ("Lazy Loading", "Optimize initial load by deferring offscreen image loading.", "/lazy"),
        new("Fill Mode", "Create responsive images that adapt to their container's size.", "/fill"),
        new("Sizes & Aspect Ratio", "Deliver appropriately sized images for various screen dimensions.", "/sizes"),
        new("Interactive Demo", "Experiment with dynamic image properties in real-time.", "/interactive-state"),
    };
}
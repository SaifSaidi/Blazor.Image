@page "/"
<PageTitle>Home</PageTitle>

<div class="min-h-screen flex flex-col">
    <header class="bg-gradient-to-r from-blue-600 to-blue-800 text-white py-20">
        <div class="container mx-auto px-4 text-center">
            <div class="flex mx-auto justify-center items-center gap-4 mb-6">
                <img src="/icon.png" width="80" height="80" class="hover:scale-110 transition-transform duration-300" alt="BlazorImage Logo" />
                <h1 class="text-4xl md:text-6xl font-bold">Blazor.Image</h1>
            </div>
            <p class="text-xl md:text-2xl mb-10 max-w-2xl mx-auto">Image optimization for Blazor Static and Interactive Server-Side Applications.</p>
            <div class="flex justify-center gap-4 flex-wrap">
                <a href="https://github.com/saifsaidi/BlazorImage"
                   class="inline-flex items-center gap-2 bg-white text-blue-600 px-8 py-3 rounded-full font-medium hover:bg-opacity-90 transition-all shadow-lg hover:shadow-xl">
                    <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                        <path d="M12 2C6.477 2 2 6.484 2 12.017c0 4.425 2.865 8.18 6.839 9.504.5.092.682-.217.682-.483 0-.237-.008-.868-.013-1.703-2.782.605-3.369-1.343-3.369-1.343-.454-1.158-1.11-1.466-1.11-1.466-.908-.62.069-.608.069-.608 1.003.07 1.531 1.032 1.531 1.032.892 1.53 2.341 1.088 2.91.832.092-.647.35-1.088.636-1.338-2.22-.253-4.555-1.113-4.555-4.951 0-1.093.39-1.988 1.029-2.688-.103-.253-.446-1.272.098-2.65 0 0 .84-.27 2.75 1.026A9.564 9.564 0 0112 6.844c.85.004 1.705.115 2.504.337 1.909-1.296 2.747-1.027 2.747-1.027.546 1.379.202 2.398.1 2.651.64.7 1.028 1.595 1.028 2.688 0 3.848-2.339 4.695-4.566 4.943.359.309.678.92.678 1.855 0 1.338-.012 2.419-.012 2.747 0 .268.18.58.688.482A10.019 10.019 0 0022 12.017C22 6.484 17.522 2 12 2z" />
                    </svg>
                    Github
                </a>
                <a href="/gallery"
                   class="inline-flex items-center gap-2 bg-blue-600 text-white px-8 py-3 rounded-full font-medium hover:bg-blue-700 transition-all shadow-lg hover:shadow-xl border border-white/20">
                    Examples
                </a>
            </div>
        </div>
    </header>

    <main class="container mx-auto max-w-7xl py-16 flex-grow">
        <section class="max-w-4xl mx-auto">
            <h2 class="text-3xl font-bold mb-8 text-gray-800">Usage</h2>

            <div class="space-y-12">
                <div class="bg-white rounded-xl shadow-lg p-8">
                    <h3 class="text-2xl font-semibold mb-4 text-blue-600">Using <code class="bg-blue-50 px-2 py-1 rounded text-blue-600">Image</code> Component</h3>
                    <p class="text-gray-600 mb-6">The <code class="bg-gray-100 px-2 py-1 rounded">Image.razor</code> component is used to display optimized images.</p>

                    <div class="space-y-6">
                        <div>
                            <h4 class="text-lg font-semibold mb-3 text-gray-700">Parameters</h4>
                            <ul class="grid grid-cols-1 gap-3 text-gray-600">
                                @foreach (var param in GetImageParameters())
                                {
                                    <li class="flex items-start gap-2">
                                        <code class="bg-gray-100 px-2 py-1 rounded min-w-[100px]">@param.Name</code>
                                        <span>@param.Description</span>
                                    </li>
                                }
                            </ul>
                        </div>

                        <div>
                            <h4 class="text-lg font-semibold mb-3 text-gray-700">Example (Width and Height)</h4>
                            <pre class="bg-gray-900 text-gray-100 p-4 rounded-lg overflow-x-auto"><code>@GetImageExample()</code></pre>
                        </div>

                        <div>
                            <h4 class="text-lg font-semibold mb-3 text-gray-700">Example (Using Fill)</h4>
                            <pre class="bg-gray-900 text-gray-100 p-4 rounded-lg overflow-x-auto"><code>@GetImageExampleWithFill()</code></pre>
                        </div>
                    </div>
                </div>

                <div class="bg-white rounded-xl shadow-lg p-8">
                    <h3 class="text-2xl font-semibold mb-4 text-blue-600">Using <code class="bg-blue-50 px-2 py-1 rounded text-blue-600">Picture</code> Component</h3>
                    <p class="text-gray-600 mb-6">The <code class="bg-gray-100 px-2 py-1 rounded">Picture.razor</code> component is used to display optimized images with support for multiple sources with figure.</p>

                    <div class="space-y-6">
                        <div>
                            <h4 class="text-lg font-semibold mb-3 text-gray-700">Parameters</h4>
                            <ul class="grid grid-cols-1 gap-3 text-gray-600">
                                @foreach (var param in GetPictureParameters())
                                {
                                    <li class="flex items-start gap-2">
                                        <code class="bg-gray-100 px-2 py-1 rounded min-w-[100px]">@param.Name</code>
                                        <span>@param.Description</span>
                                    </li>
                                }
                            </ul>
                        </div>

                        <div>
                            <h4 class="text-lg font-semibold mb-3 text-gray-700">Example</h4>
                            <pre class="bg-gray-900 text-gray-100 p-4 rounded-lg overflow-x-auto"><code>@GetPictureExample()</code></pre>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </main>

    <footer class="bg-gray-100 py-8 mt-20 border-t border-gray-200">
        <div class="container mx-auto px-4 text-center">
            <p class="text-gray-600">© 2025 BlazorImage. All rights reserved.</p>
        </div>
    </footer>
</div>

@code {
    private record Parameter(string Name, string Description);

    private List<Parameter> GetImageParameters() => new()
    {
        new("Src", "The source URL of the image (Local source only)."),
        new("Alt", "The alt text for the image."),
        new("Width", "The width of the image."),
        new("Height", "The height of the image."),
        new("LazyLoading", "Enable lazy loading for the image."),
        new("Title", "The title of the image."),
        new("CssClass", "The CSS class for the image."),
        new("WrapperClass", "The CSS class for the image wrapper."),
        new("Style", "The inline style for the image."),
        new("WrapperStyle", "The inline style for the image wrapper."),
        new("Quality", "The quality of the image."),
        new("Format", "The format of the image."),
        new("Sizes", "The sizes attribute for responsive images."),
        new("EnableDeveloperMode", "Enable developer mode for the image."),
    };

    private List<Parameter> GetPictureParameters() => new()
    {
        new("Src", "The source URL of the image (Local source only)."),
        new("Alt", "The alt text for the image."),
        new("Width", "The width of the image."),
        new("Height", "The height of the image."),
        new("LazyLoading", "Enable lazy loading for the image."),
        new("Title", "The title of the image."),
        new("CssClass", "The CSS class for the image."),
        new("WrapperClass", "The CSS class for the image wrapper."),
        new("Style", "The inline style for the image."),
        new("WrapperStyle", "The inline style for the image wrapper."),
        new("Quality", "The quality of the image."),
        new("Format", "The format of the image."),
        new("Sizes", "The sizes attribute for responsive images."),
        new("CaptionClass", "The CSS class for the caption."),
        new("Caption", "The caption text for the image."),
        new("EnableDeveloperMode", "Enable developer mode for the image."),
    };

    private string GetImageExample() =>
        "<Image Src=\"/image.jpg\" Alt=\"Example Image\" Width=\"800\" Height=\"600\" LazyLoading=\"true\" Title=\"Example Image Title\" CssClass=\"custom-image-class\" WrapperClass=\"custom-wrapper-class\" Style=\"border: 1px solid #ccc;\" WrapperStyle=\"padding: 10px;\" Quality=\"80\" Format=\"FileFormat.jpeg\" Sizes=\"(min-width: 1024px) 1024px, 100vw\" EnableDeveloperMode=\"true\" />";

    private string GetImageExampleWithFill() =>
       "<Image Src=\"/image.jpg\" Alt=\"Example Image\" Fill=\"true\" LazyLoading=\"true\" Title=\"Example Image Title\" CssClass=\"custom-image-class\" WrapperClass=\"custom-wrapper-class\" Style=\"border: 1px solid #ccc;\" WrapperStyle=\"padding: 10px;\" Quality=\"80\" Format=\"FileFormat.jpeg\" Sizes=\"(min-width: 1024px) 1024px, 100vw\" EnableDeveloperMode=\"true\" />";

    private string GetPictureExample() =>
        "<Picture Src=\"image.jpg\" Alt=\"Example Image\" Width=\"800\" Height=\"600\" LazyLoading=\"true\" Title=\"Example Image Title\" CssClass=\"custom-image-class\" WrapperClass=\"custom-wrapper-class\" Style=\"border: 1px solid #ccc;\" WrapperStyle=\"padding: 10px;\" Quality=\"80\" Format=\"FileFormat.jpeg\" Sizes=\"(min-width: 1024px) 1024px, 100vw\" CaptionClass=\"custom-caption-class\" Caption=\"This is an example caption.\" EnableDeveloperMode=\"true\" />";
}

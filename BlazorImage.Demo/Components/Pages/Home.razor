@page "/"
<PageTitle>BlazorImage Home</PageTitle>

<main class="container mx-auto max-w-7xl py-12 px-4 sm:px-6 lg:px-8 flex-grow">
    <section class="max-w-5xl mx-auto">
        <div class="flex flex-col items-center justify-between mb-8">
            <h2 class="text-3xl font-bold text-gray-800 flex items-center gap-3">
                <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="text-blue-600">
                    <rect width="18" height="18" x="3" y="3" rx="2" ry="2"></rect>
                    <circle cx="9" cy="9" r="2"></circle>
                    <path d="m21 15-3.086-3.086a2 2 0 0 0-2.828 0L6 21"></path>
                </svg>
                Examples
            </h2> 
            <p>
                Explore different ways to use the Image component for optimal performance and user experience.

            </p>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
            @foreach (var example in GetExamples())
            {
                <a href="@example.Src" class="group">
                    <div class="bg-white border border-gray-200 rounded-lg shadow-sm hover:shadow-md  p-5 h-full flex flex-col">
                        <div class="flex items-center gap-3 mb-3">
                             
                            <h3 class="font-semibold text-lg text-gray-800">@example.Name</h3>
                        </div>
                        <p class="text-gray-600 flex-grow">@example.Description</p>
                        <div class="mt-4 pt-3 border-t border-gray-100 flex justify-between items-center">
                            <code class="text-xs bg-gray-100 px-2 py-1 rounded text-gray-700">@example.Src</code>
                            <span class="text-blue-600 group-hover:translate-x-1 transition-transform flex items-center">
                                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                    <path d="M5 12h14"></path>
                                    <path d="m12 5 7 7-7 7"></path>
                                </svg>
                            </span>
                        </div>
                    </div>
                </a>
            }
        </div>

        <div class="mt-12 bg-blue-50 border border-blue-100 rounded-lg p-6">
            <h3 class="text-xl font-semibold text-blue-800 mb-3 flex items-center gap-2">
                <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                    <circle cx="12" cy="12" r="10"></circle>
                    <path d="M12 16v-4"></path>
                    <path d="M12 8h.01"></path>
                </svg>
                Getting Started
            </h3>
            <p class="text-blue-700 mb-4">
                BlazorImage provides optimized image rendering for your Blazor applications.
            </p>
            <div class="flex flex-wrap gap-3">
                <a href="https://github.com/saifsaidi/BlazorImage#readme"
                   target="_blank"
                   class="inline-flex items-center gap-2 bg-blue-600 hover:bg-blue-700 text-white px-4 py-2 rounded-md font-medium transition-colors">
                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                        <path d="M3 9h18v10a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V9Z"></path>
                        <path d="m3 9 2.45-4.9A2 2 0 0 1 7.24 3h9.52a2 2 0 0 1 1.8 1.1L21 9"></path>
                        <path d="M12 3v6"></path>
                    </svg>
                    Documentation
                </a>
                <a href="https://www.nuget.org/packages/BlazorImage/"
                   target="_blank"
                   class="inline-flex items-center gap-2 bg-white border border-blue-600 text-blue-600 hover:bg-blue-50 px-4 py-2 rounded-md font-medium transition-colors">
                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                        <path d="m8 3 4 8 5-5 5 15H2L8 3z"></path>
                    </svg>
                    NuGet Package
                </a>
            </div>
        </div>
    </section>
</main>

@code {
    private record Examples(string Name, string Description, string Src);

    private List<Examples> GetExamples() => new()
    {

        new("Dashboard", "Manage and view the cached optimized images for your application.", "/blazor/images"),

	    new ("Basic", "Default image loading behavior with width and height.", "/basic"),
        new ("Priority Loading", "Eagerly load important above-the-fold images.", "/priority"),
        new ("Lazy Loading", "Default behavior for images that load as they enter viewport", "/lazy"),
        new("Fill, Responsive Images", "Images that adapt to different screen sizes with the sizes prop", "/fill"),
        new("Interactive State", "Enables interactive state for the component" , "/interactive-state"),
    };

   }


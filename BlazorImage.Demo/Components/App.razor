    <style type="text/tailwindcss">
        .image-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
            gap: 4px;
        }

        @@layer utilities {
            .aspect-video {
                aspect-ratio: 16 / 9;
            }

            .aspect-square {
                aspect-ratio: 1 / 1;
            }

            .aspect-portrait {
                aspect-ratio: 3 / 4;
            }
        }
    </style>
    <style>
        .lazy-container {
            min-height: 200px; /* Adjust as needed */
            display: flex;
            align-items: center;
            justify-content: center;
            background-color: #f0f0f0;
        }

        .loading-spinner {
            font-size: 1.2rem;
            color: #888;
        }</style>
